{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "http://ui5.sap/schema/specVersion/3.0/kind/project/application.json",

	"type": "object",
	"required": ["specVersion", "type", "metadata"],
	"if": {
		"properties": {
			"specVersion": { "enum": ["3.0"] }
		}
	},
	"then": {
		"additionalProperties": false,
		"properties": {
			"specVersion": { "enum": ["3.0"] },
			"kind": {
				"enum": ["project", null]
			},
			"type": {
				"enum": ["application"]
			},
			"metadata": {
				"$ref": "../../../2.0/kind/project.json#/definitions/metadata"
			},
			"framework": {
				"$ref": "../../../2.0/kind/project.json#/definitions/framework"
			},
			"resources": {
				"$ref":  "../../../2.0/kind/project/application.json#/definitions/resources"
			},
			"builder": {
				"$ref": "#/definitions/builder"
			},
			"server": {
				"$ref": "../../../2.0/kind/project.json#/definitions/server"
			},
			"customConfiguration": {
				"type": "object",
				"additionalProperties": true
			}
		}
	},

	"definitions": {

		"builder": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"resources": {
					"$ref": "../../../2.0/kind/project.json#/definitions/builder-resources"
				},
				"cachebuster": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"signatureType": {
							"enum": ["time", "hash"]
						}
					}
				},
				"bundles": {
					"$ref": "../project.json#/definitions/builder-bundles"
				},
				"componentPreload": {
					"$ref": "../../../2.0/kind/project.json#/definitions/builder-componentPreload"
				},
				"customTasks": {
					"$ref": "../../../2.0/kind/project.json#/definitions/customTasks"
				}
			}
		}
	}
}
