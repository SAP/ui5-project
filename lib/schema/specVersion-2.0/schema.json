{
	"$id": "http://ui5.sap/schema/specVersion-2.0/schema.json",

	"required": ["specVersion", "metadata"],
	"properties": {
		"specVersion": { "enum": ["2.0"] },
		"kind": {
			"enum": ["project", "extension", null]
		},
		"metadata": {
			"$ref": "../ui5.json#/definitions/metadata"
		}
	},
	"if": {
		"properties": {
			"kind": {
				"enum": ["project", null]
			}
		}
	},
	"then": {
		"$ref": "kind-project.json"
	},
	"else": {
		"$ref": "#/definitions/specVersion-2.0-kind-extension"
	},

	"definitions": {
		"specVersion-2.0-kind-extension": {
			"additionalProperties": false,
			"required": ["specVersion", "kind", "type", "metadata"],
			"properties": {
				"specVersion": { "enum": ["2.0"] },
				"kind": {
					"enum": ["extension"]
				},
				"type": {
					"enum": [
						"task",
						"server-middleware",
						"project-shim"
					]
				},
				"metadata": {
					"$ref": "../ui5.json#/definitions/metadata"
				}
			}
		}
	}
}
