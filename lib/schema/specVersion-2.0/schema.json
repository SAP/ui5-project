{
	"$id": "http://ui5.sap/schema/specVersion-2.0/schema.json",

	"required": ["specVersion", "metadata"],
	"properties": {
		"specVersion": { "enum": ["2.0"] },
		"kind": {
			"enum": ["project", "extension", null]
		},
		"metadata": {
			"$ref": "../ui5.json#/definitions/metadata"
		}
	},
	"if": {
		"properties": {
			"kind": {
				"enum": ["project", null]
			}
		}
	},
	"then": {
		"$ref": "kind-project.json"
	},
	"else": {
		"$ref": "kind-extension.json"
	}
}
