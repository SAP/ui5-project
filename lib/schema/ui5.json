{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://ui5.sap/schema/ui5.json",
    "title": "ui5.yaml",
    "description": "Schema for UI5 Tooling Configuration File (ui5.yaml)",
    "$comment": "See https://sap.github.io/ui5-tooling/",

    "required": ["specVersion"],
    "properties": {
        "specVersion": {
            "enum": [
                "2.0",
                "1.1", "1.0", "0.1"
            ]
        }
    },

    "if": {
        "properties": {
            "specVersion": { "const": "2.0" }
        }
    },
    "then": {
        "$ref": "specVersion-2.0/schema.json"
    },
    "else": {
        "if": {
            "properties": {
                "specVersion": { "const": "1.1" }
            }
        },
        "then": {
            "$ref": "#/definitions/new-specVersion-1.1"
        },
        "else": {
            "if": {
                "properties": {
                    "specVersion": { "enum": ["1.0", "0.1"] }
                }
            },
            "then": {
                "$ref": "#/definitions/new-specVersion-1.0"
            }
        }
    },

    "definitions": {

        "metadata": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Unique name"
                },
                "copyright": {
                    "type": "string"
                }
            }
        },


        "new-specVersion-1.1": {
            "__comment": "TODO",
            "additionalProperties": false,
            "required": ["specVersion", "type", "metadata"],
            "properties": {
                "specVersion": { "enum": ["1.1"] },
                "type": {
                    "enum": [
                        "application",
                        "library",
                        "theme-library",
                        "module"
                    ]
                },
                "metadata": {
                    "$ref": "#/definitions/metadata"
                }
            }
        },
        "new-specVersion-1.0": {
            "__comment": "TODO",
            "properties": {
                "type": {
                    "enum": [
                        "application",
                        "library",
                        "module"
                    ]
                }
            }
        }
    }
}
